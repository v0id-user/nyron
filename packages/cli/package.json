{
  "name": "@nyron/cli",
  "version": "0.7.9",
  "type": "module",
  "bin": {
    "nyron": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "clean": "rm -rf dist",
    "build:binary": "bun build src/index.ts --outfile dist/index.js --target bun",
    "build:esm": "tsdown --config build.config.ts",
    "build": "bun run clean && bun run build:binary && bun run build:esm",
    "cli": "bun run build && bun dist/index.js",
    "prepublishOnly": "bun run build",
    "watch": "chokidar './src/**/*.ts' -c 'bun run build'"
  },
  "dependencies": {
    "arktype": "^2.1.22",
    "commander": "^14.0.1",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^17.2.3",
